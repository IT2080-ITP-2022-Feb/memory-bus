<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memory_bus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".birthday.UpdateBirthday"></activity>
        <activity android:name=".birthday.BirthdayList" />
        <activity android:name=".birthday.NewBirthday" />
        <activity android:name=".birthday.BirthdayBook" />
        <activity android:name=".recipe.UpdateRecipe" />
        <activity android:name=".recipe.RecipeList" />
        <activity android:name=".recipe.NewRecipe" />
        <activity android:name=".recipe.RecipeBook" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>